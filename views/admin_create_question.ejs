<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TKH Admin Dashboard - Add Question</title>
    <!-- League Spartan Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@269&display=swap" rel="stylesheet">

    <!-- Material Icons Outlined -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">

    <!-- Main Container -->
    <div class="container mt-5">
        <!-- Page Heading -->
        <h2 class="text-center text-black mb-4">Add a New Question</h2>

        <!-- Form for Adding a New Question -->
        <form action="/admin/questions" method="POST" class="bg-white p-4 rounded shadow-sm">
            <!-- Question Text Input -->
            <div class="mb-3">
                <h3 class="mt-4"><label for="questionText" class="form-label">Question:</label></h3>
                <input type="text" name="questionText" id="questionText" class="form-control" placeholder="Enter question text" required>
            </div>
            
            <!-- Answers Section -->
            <h3 class="mt-4">Answers:</h3>
            <div id="answerFields" class="mb-3">
                <!-- Initial Answer Input -->
                <div class="input-group mb-2">
                    <input type="text" name="answers[0][text]" class="form-control" placeholder="Answer text" required>
                    <div class="input-group-text">
                        <input type="checkbox" name="answers[0][isCorrect]" aria-label="Correct Answer">
                        <label class="ms-2">Correct Answer</label>
                    </div>
                </div>
            </div>

            <!-- Add Answer and Submit Buttons -->
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-secondary" onclick="addAnswer()">Add Another Answer</button>
                <button type="submit" class="btn btn-primary">Save Question</button>
            </div>
        </form>
    </div>

    <!-- JavaScript to Dynamically Add Answer Fields -->
    <script>
        let answerCount = 1;

        function addAnswer() {
            const answerFields = document.getElementById('answerFields');
            const newAnswer = document.createElement('div');
            newAnswer.classList.add('input-group', 'mb-2');
            newAnswer.innerHTML = `
                <input type="text" name="answers[${answerCount}][text]" class="form-control" placeholder="Answer text" required>
                <div class="input-group-text">
                    <input type="checkbox" name="answers[${answerCount}][isCorrect]" aria-label="Correct Answer">
                    <label class="ms-2">Correct Answer</label>
                </div>
            `;
            answerFields.appendChild(newAnswer);
            answerCount++;
        }
    </script>

    <!-- Bootstrap JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>